        <StackPanel Grid.Row="11" Orientation="Horizontal">
            <Button Content="Сохранить" Width="125" Margin="10"
                    Command="{Binding SaveCommand}"/>
            <Button Content="Удалить" Width="125" Margin="10"
                    Command="{Binding DeleteCommand}"/>
        </StackPanel> 
    </Grid>

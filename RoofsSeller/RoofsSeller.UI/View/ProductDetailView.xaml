                <StackPanel Grid.Row="17" Orientation="Horizontal">
                    <Button Content="Save" Width="125" Margin="10"
                    Command="{Binding SaveCommand}"/>
                    <Button Content="Delete" Width="125" Margin="10"
                    Command="{Binding DeleteCommand}"/>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
